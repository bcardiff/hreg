%h2 
  Paciente:
  = @anemia.patient.display_name

.form-horizontal.anemia

  .form-inputs
    - @anemia.survey.each do |item|
      - if item.is_a? ActiveSurvey::Question
        - if item.unit.nil?
          .control-group
            %label.control-label= item.text
            %span.uneditable-input= @anemia.send(item.name)
        - else
          .control-group
            %label.control-label= item.text
            .input-append
              %span.uneditable-input= @anemia.send(item.name)
              %span.add-on= item.unit
      - if item.is_a? ActiveSurvey::TextItem
        %h3= item.text

  .form-actions
    = link_to 'Edit', edit_patient_anemia_url(@patient, @anemia), class: 'btn'